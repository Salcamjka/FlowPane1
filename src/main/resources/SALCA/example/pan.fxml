<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<!-- Un Hbox que coloca los elementos hijos en horizontal -->
<HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" spacing="60.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"   styleClass="root" >
   <children>
       <!-- Use tres vbox dentro de cada uno un flowPane -->
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" spacing="20.0">
         <children>
             <!-- El primer panel con alineación a la esquina inferior derecha -->
            <FlowPane alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="150.0" styleClass="panel" vgap="1.0" >
               <children>
                  <Label text="BOTTOM_RIGHT" />
                  <Button mnemonicParsing="false" text="Button1">
                     <font> <!-- he reducido el tamaño de la fuente -->
                        <Font size="10.0" />
                     </font></Button>
                  <Button mnemonicParsing="false" text="Button2">
                     <font>
                        <Font size="10.0" />
                     </font></Button>
                  <Button mnemonicParsing="false" text="Button3">
                     <font>
                        <Font size="10.0" />
                     </font></Button>
               </children>
            </FlowPane>
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" spacing="20.0">
         <children>
             <!-- El segundo panel con alineación a la esquina inferior izquierda -->
            <FlowPane alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="150.0" styleClass="panel" vgap="1.0">
               <children>
                  <Label text="BOTTOM_LEFT" />
                  <Button mnemonicParsing="false" text="Button1">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Button>
                  <Button text="Button2">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" text="Button3">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Button>
               </children>
            </FlowPane>
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" spacing="20.0">
         <children>
             <!--El trecero con  BOTTOM_RIGHT-->
            <FlowPane alignment="CENTER"  prefHeight="100.0" prefWidth="150.0" styleClass="panel">
               <children>
                  <Label text="CENTER" />
                  <Button mnemonicParsing="false" text="Button1" />
                  <Button mnemonicParsing="false" text="Button2" />
                  <Button mnemonicParsing="false" text="Button3" />
               </children>
            </FlowPane>
         </children>
      </VBox>
   </children>
</HBox>
